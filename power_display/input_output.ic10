alias AnalyzeInput d0
alias DisplayInput d1
alias AnalyzeOutput d2
alias DisplayOutput d3

init:
s DisplayInput Mode 2   # power
s DisplayOutput Mode 2  # power
s DisplayInput Color 5  # yellow
s DisplayOutput Color 5 # yellow

loop:
yield
l r0 AnalyzeInput PowerPotential
s DisplayInput Setting r0
l r0 AnalyzeOutput PowerRequired
s DisplayOutput Setting r0
j loop